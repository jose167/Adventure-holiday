<% provide(:title, 'Sign up') %>
<br>
<br>
<h1>Sign up</h1><br>

<div class="form">
  
    <%= form_for(@user) do |f| %>
     <%= render 'shared/error_messages' %>
     
     
      <%= f.label :fname, "First Name" %>
      <%= f.text_field :fname, class: 'form-control' %><br>
        <br>
      <%= f.label :lname, "Last Name" %>
      <%= f.text_field  :lname, class: 'form-control' %><br>
      <br>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br>
        <br>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br>
        <br>
      <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %><br>
        <br>
      <%= f.submit "Create my account", class: "btn btn-primary" %><br>
    <% end %>
  
</div>