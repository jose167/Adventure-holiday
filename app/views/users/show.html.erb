<% provide(:title, @user.fname) %>
<div class="row"> 
  <aside class="col-md-4">
    <section class="user_info">

  <br>
  <%= link_to '<button type="button">Update profile</button>'.html_safe, edit_user_path(current_user) %><br>
  <br>
  <%= gravatar_for @user %>
  <h1><%= @user.fname %>
        <%= @user.lname %></h1><br>
  <br>
    <b><% if current_user.admin? %>
    Welcome admin your last visit was: <%= @user.last_seen_at %><br>
    We have <%= pluralize(@total_orders, "orders") %><br></b>
    
    <br>
    <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
       <% end %>
  </tbody>
</table>
      <% else %>
     Welcome  your last visit was: <%= @user.last_seen_at %><br>
      You have <%= pluralize(@user.orders.count, "orders")%><br>
       <br>
       <br>
      <% end %>
        <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th>Tour Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
       <% @user.orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= order.tour_id %></td>
      </tr>
       <% end %>
  </tbody>
</table>
</h1>
   </section>
  </aside>
</div>

