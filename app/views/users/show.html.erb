<% provide(:title, @user.fname) %>
<div class="row"> 
  <aside class="col-md-4">
    <section class="user_info">
<h1>
  <%= gravatar_for @user %>
  <%= @user.fname %>
    <% if current_user.admin? %>
    It's <%= Time.now %>
    We have <%= pluralize(@total_orders, "orders") %>
    <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
       <% end %>
  </tbody>
</table>
      <% else %>
      It's <%= Time.now %>
      <%= pluralize(@user_orders, "orders") %>
      <% end %>
</h1>
   </section>
  </aside>
</div>

